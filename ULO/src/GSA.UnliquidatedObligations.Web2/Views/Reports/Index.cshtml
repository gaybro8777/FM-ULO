@using GSA.UnliquidatedObligations.Web.Controllers;
@model IEnumerable<GSA.UnliquidatedObligations.BusinessLayer.Data.Reporting.ReportDescription>
@{
    this.SetTitles(PageKeys.Reports, "Reports");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.SortableHeaderFor(z => z.Title)
            </th>
            <th>
                @Html.SortableHeaderFor(z => z.Description)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr contextId="@item.Name">
                <td>
                    <a asp-action="@ReportsController.ActionNames.ConfigureReport" asp-route-name="@item.Name">@item.Title</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <partial name="_PaginationPartial" />
</div>
